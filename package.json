{
  "name": "whats-task-backend",
  "version": "1.0.0",
  "description": "WhatsTask backend for Railway deployment with WhatsApp integration",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/migrate.js && node scripts/migrate-auth.js && node server.js",
    "start:modular": "NODE_ENV=development node server-modular.js",
    "build": "echo 'Build completed'",
    "dev": "nodemon server.js",
    "test": "jest",
    "migrate": "node scripts/migrate.js",
    "migrate-auth": "node scripts/migrate-auth.js",
    "postinstall": "npm run migrate && npm run migrate-auth"
  },
  "keywords": [
    "whatsapp",
    "task-management",
    "railway",
    "express"
  ],
  "author": "WhatsTask Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^7.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^5.11.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
